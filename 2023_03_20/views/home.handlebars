                        <option value="{{product}}">{{product}}</option>

                        {{/each}}
                    </select>
                </div>
                <div class="col-auto" id="quantity">
                    <span>{{quantuty}}</span>
                </div>
                <div class="col-auto" id="price">
                    <span>{{price}}</span>
                </div>
                <div class="col-2" id="breadQ">
