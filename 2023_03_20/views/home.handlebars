<div class="grade col-6">
    <form action="/payment">
        <div class="mb-2">
            <label>Please Select Meat Product and Quantity</label>
            <div class="row g-3 align-items-center">
                <div class="col-2">
                    <select class="form-control" name="meatProduct">
                        {{#each meat}}

                        <option value="{{product}}">{{product}}</option>

                        {{/each}}
                    </select>
                </div>
                <div class="col-auto" id="quantity">
                    <span>{{quantity}}</span>
                </div>
                <div class="col-auto" id="price">
                    <span>{{price}}</span>
                </div>
                <div class="col-2" id="meatQ">
                    <input type="number" name="meat" class="form-control" />
                </div>
                <div class="col-auto" id="orderMeat">
                    <input class="btn btn-primary" type="button" onmousedown="chooseProduct(event)" value="Order">
                </div>
            </div>
            {{!-- <button class="btn btn-primary">Buy</button> --}}
        </div>

        <div class="mb-2">
            <label>Please Select Milk Product and Quantity</label>
