                    <select class="form-control" onchange="chooseProduct(event)" name="chemicalProduct">
                        {{#each chemical}}

                        <option value="{{product}}" name="{{product}}">{{product}}</option>

                        {{/each}}
                    </select>
                </div>
                <div class="col-auto" id="quantity">
                    <span>{{quantuty}}</span>
